<%- include('partials/header') %>

<main> 
    <div class="column-header ">
        <div class="column">
            <h4 class="column-id"> ID </h4>
        </div>
        <div class="column">
            <h4>Título </h4>
        </div>
        <div class="column">
            <h4>Editora </h4>
        </div>
        <div class="column">
            <h4>Ações </h4>
        </div>
    </div>

    <div class="body">
        <% livros.forEach(livro => { %>
            <div class="row">
                <span class="item"><%= livro.id  %> </span>
                <span class="item"><%= livro.titulo  %> </span>
                <span class="item"><%= livro.editora  %> </span>
                <span class="item-botoes">
                    <form action="/biblioteca/deletar/<%= livro.id %>?_method=DELETE" method="post">
                        <button type="submit">Deletar</button>
                    </form>
                    <button>

                        <a href="/biblioteca/<%= livro.id %>/editar" > Editar</a>

                    </button>
                </span>
            </div>
        <% }) %>
    </div>            
    
</main>

<%- include('partials/footer') %>
